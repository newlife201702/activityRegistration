.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 50px;
  color: #333;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100px;
}

.button-container {
  width: 80%;
}

.register-btn, .admin-btn {
  width: 100%;
  height: 50px;
  line-height: 50px !important;
  text-align: center;
  border-radius: 8px;
  font-size: 18px;
  font-weight: bold;
  padding: 0 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.register-btn {
  background-color: #07c160;
  color: white;
}

.admin-btn {
  background-color: #1989fa;
  color: white;
} 