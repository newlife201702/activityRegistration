.batch-selection-container {
  padding: 20px;
  background-color: #f0f9ff;
  min-height: 100vh;
}

.title {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #333;
}

.loading, .no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100px;
  color: #999;
}

.batch-list {
  width: 100%;
}

.batch-item {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  position: relative;
}

.batch-item-active {
  cursor: pointer;
}

.batch-item-inactive {
  opacity: 0.8;
  position: relative;
}

.batch-unavailable-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
}

.unavailable-text {
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 5px 15px;
  border-radius: 15px;
  font-size: 14px;
}

.batch-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #333;
  padding-right: 70px; /* 为状态标签留出空间 */
}

.batch-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  font-size: 14px;
  color: #666;
}

.info-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
}

.info-label {
  color: #888;
  min-width: 80px;
}

.info-value {
  color: #333;
  flex: 1;
}

/* 比赛时间列表样式 */
.competition-times {
  display: flex;
  flex-direction: column;
}

.time-item {
  margin-bottom: 4px;
  line-height: 1.4;
}

.time-item:last-child {
  margin-bottom: 0;
}

.batch-desc {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
  line-height: 1.5;
}

.batch-status {
  position: absolute;
  top: 15px;
  right: 15px;
  padding: 3px 8px;
  border-radius: 10px;
  font-size: 12px;
}

.status-active {
  background-color: #07c160;
  color: white;
}

.status-inactive {
  background-color: #999;
  color: white;
} 